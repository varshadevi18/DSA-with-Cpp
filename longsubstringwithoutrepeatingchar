class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int n=s.size();
        int l=0;
        int r=0;
        int maxlen=0;
        unordered_map<char,int>mpp;
        while(r<n){
            char c=s[r];
            if(mpp.find(c)!= mpp.end() && mpp[c]>=l){
                l=mpp[c]+1;
            }
            maxlen=max(maxlen,r-l+1);
            mpp[c]=r;
            r++;
        }
        return maxlen;

        
    }
};
