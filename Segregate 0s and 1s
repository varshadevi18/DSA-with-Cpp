// User function template for C++

class Solution {
  public:
    void segregate0and1(vector<int> &arr) {
        int n=arr.size();
        int i=0;
        int j=0;
        while(j<n){
            if(arr[j]==0){
                swap(arr[j],arr[i]);
                i++;
                j++;
            }
            else if(arr[j]==1){
                j++;
                
            }
        }
        
    }
};
