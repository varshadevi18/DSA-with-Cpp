#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin >> n;

    vector<int> arr(n);
    for(int i=0;i<n;i++){
        cin >> arr[i];
    }
    int s=0;
    int m=INT_MIN;
    int start=-1;
    int end=-1;
    for(int i=0;i<n;i++){
        s+=arr[i];
        if(s>m){
            m=s;
            start=0;
            end=i;
        }
        if(s<0){
            s=0;
        }
    }
    cout<<m;
    cout<<start<<""<<end;
}
